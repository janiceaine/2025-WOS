@{
    ViewData["Title"] = "Home Page";
}

@if (TempData[key: "LogoutMessage"] is string message)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@message</strong>
        <button type="button" onclick="playRimshot()" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="d-flex justify-content-center align-items-center" style="height: 700px;">
    <div class="text-center" style="width: 800px">
        @* <h1 class="display-4">The Groan Zone</h1>
        <p>Where every pun is intended.</p> *@
        <div>
            <img src="/images/groan-preview.png" class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|} mb-3" alt="logo">
        </div>
        <div>
            <a class="btn btn-sm btn-primary me-2" asp-controller="Account" asp-action="RegisterForm">Register</a>
            <a class="btn btn-sm btn-primary" asp-controller="Account" asp-action="LoginForm">Log In</a>
        </div>

    </div>
</div>