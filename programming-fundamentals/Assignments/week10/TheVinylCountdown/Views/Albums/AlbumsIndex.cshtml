@model AlbumsIndexViewModel

@{
    ViewData[index: "Title"] = "All Albums";
    ViewData[index: "BackgroundClass"] = "bg-login";
}

<h1 class="display-4">All Albums</h1>

<table class="table table-striped table-bordered table-hover" style="max-width: 900px;">
    <thead>
        <tr>
            <th style="width: 40%">Title</th>
            <th>Artist</th>
            <th>Uploaded By</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (AlbumsRowViewModel album in Model.Albums)
        {
            <tr>
                <td class="align-middle">@album.Title</td>
                <td class="align-middle">@album.Artist</td>
                <td class="align-middle">@album.UploadedBy</td>

                <td class="d-flex align-items-center gap-2">
                    @if (album.LikedByMe)
                    {
                        <form asp-controller="Albums" asp-action="Unlike" asp-route-id="@album.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-primary">Unlike 👎🏾</button>
                        </form>
                    }
                    else
                    {
                        <form asp-controller="Albums" asp-action="Like" asp-route-id="@album.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-primary">Like 👍🏾</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>