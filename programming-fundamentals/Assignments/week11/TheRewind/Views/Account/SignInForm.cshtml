
@model SignInFormViewModel
@{
    ViewData["Title"] = "Sign In";
    var error = Model.Error;
}

<h1 class="display-2">Sign In</h1>

@if (error is not null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <span>You have been successfully signned out.</span>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div class="card p-3 shadow-lg" style="max-width: 640px">
    <div class="row g-0">
        <div class="col-md-8">
            <div class="card-body">
                <h2 class="card-title">Sign In</h2>
                <form asp-action="ProcessSignInForm" asp-controller="Account" method="post">
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email<span style="color: red;">*</span>:</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="form-text text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password<span style="color: red;">*</span>:</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="form-text text-danger"></span>
            </div>
            <div class="text-end">
                <button type="submit" class="btn btn-primary">Sign in</button>
            </div>
        </form>
            </div>
        </div>
    </div>
</div>