@model MoviesIndexViewModel

@{
    ViewData[index: "Title"] = "All Movies";
}

<h1 class="display-4">All Movies</h1>

<div class="table">
    <table class="table table-striped table-bordered table-hover" style="max-width: 900px;">
        <thead>
            <tr>
                <th style="width: 40%">Title</th>
                <th>Avg Rating</th>
                <th>Uploaded By</th>
                <th>Actions</th>
            </tr>
        </thead>
    
        <tbody>
            @foreach (MoviesRowViewModel movie in Model.Movies)
            {
                <tr>
                    <td class="align-middle">@movie.Title</td>
                    <td class="align-middle">@movie.AverageRating</td>
                    <td class="align-middle">@movie.UploadedBy</td>
    
                    <td class="d-flex align-items-center gap-2">
                        <a class="btn btn-sm btn-primary" href="/movies/@movie.Id">View</a>
                        @if(Context.Session.GetInt32("userId") == movie.UploaderId){
                            <a class="btn btn-sm btn-warning" href="/movies/@movie.Id/edit">Edit</a>
                            <a class="btn btn-sm btn-danger" href="/movies/@movie.Id/delete">Delete</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>