@{
    Layout = "_BlogLayOut";
    ViewData["Title"] = "My Blog";
    var titles = ViewData["Titles"] as List<string>;
}
<h1>@ViewData["Title"]</h1>

<ul style="list-style-type: none;">
    @if (titles != null)
    {
        for (int i = 0; i < titles.Count; i++)
        {
            <li>
                <a href="/blog/post@(i+1)" class="card text-decoration-none mt-4">
                    <div class="card-body d-flex flex-column">
                           <h5 class="card-title">@titles[i]</h5> 
                           <p class="card-text mt-auto">Click for more.</p>
                        </div>
                </a>
            </li>
        }
    }
</ul>
