@{
    Layout = "_LayOut";
    ViewData["Title"] = "Contact Me";
}

<div class="container py-3">
    <h1 class="text-center mb-2">@ViewData["Title"]</h1>

    <div class="card shadow-lg mx-auto p-4" style="max-width: 400px;">
        <div class="text-center mb-3">
            <img src="~/images/lady.jpg" class="rounded-circle" alt="Profile Picture" style="width:120px; height:120px; object-fit:cover;">
        </div>

        <h5 class="card-title text-center mb-3">Hey, you found me! 😎</h5>

        <p class="card-text text-center">
            Wanna chat about code, food, or why my plants keep dying? 🌱💻🥩
        </p>

        <ul class="list-unstyled text-center mb-3">
            <li>📧 Email: <a href="mailto:janice@example.com">janice@example.com</a></li>
            <li>📱 Phone: <a href="tel:+1234567890">(123) 456-7890</a></li>
            <li>🔗 LinkedIn: <a href="https://liinkedIn.com/janice" target="_blank">janice</a></li>
        </ul>

        <div class="d-grid gap-2">
            <a href="mailto:janice@example.com" class="btn btn-success">Shoot me an Email ✉️</a>
            <a href="tel:+1234567890" class="btn btn-warning">Call me maybe? 📞</a>
        </div>

        <p class="text-center mt-3 text-muted" style="font-size:0.9rem;">
            Disclaimer: I might respond with a meme. 😏
        </p>
    </div>
</div>