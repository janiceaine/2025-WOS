@using System.Diagnostics
@{
    ViewData["Title"] = "Product Catalog";
    var productNames = new List<string> { "Laptop", "Smartphone", "Headphones", "Webcam" }; //"Laptop", "Smartphone", "Headphones", "Webcam"
    var productPrices = new List<decimal> { 1200.00m, 800.00m, 150.00m, 75.00m };
    var IsOnSale = new List<bool> { true, false, true, false };
    var productStatus = new List<string> { "In Stock", "Low Stock", "Out of Stock", "In Stock" };

}
<h1>Our Awesome Products</h1>
<div class="mb-3">
    <p>Current Date: @DateTime.Now.ToShortDateString()</p>
    <p>Current Time: @DateTime.Now.ToLongTimeString()</p>
</div>

@if (productNames.Count == 0)
{
    <p>No products available.</p>
}
else
{

    <table class="table table-striped table-bordered">
        <thead>
            <th>Names</th>
            <th>Prices</th>
            <th>On Sale</th>
            <th>Status</th>
        </thead>
        <tbody>
            @for (var i = 0; i < productNames.Count; i++)
            {
                <tr>
                    <td style="@(productPrices[i] > 1000 ? "font-weight:bold; color:purple;" : "")">
                        @productNames[i]
                    </td>
                    <td>@productPrices[i].ToString("C")</td>

                    <td style="color:@(IsOnSale[i] ? "Red" : "")">
                        @if (IsOnSale[i])
                        {
                            @:<strong>SALE!!</strong>
                        }
                        else
                        {
                            @:No
                        }
                    </td>
                    <td>
                        @{
                            switch (productStatus[i])
                            {
                                case "In Stock":
                                    <span style="color:green;">In Stock</span>
                                    ;
                                    break;
                                case "Low Stock":
                                    <span style="color:orange;">Low Stock</span>
                                    ;
                                    break;
                                case "Out of Stock":
                                    <span style="color:red;">Out of Stock</span>
                                    ;
                                    break;
                                default:
                                    <span>@productStatus[i]</span>
                                    ;
                                    break;
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}